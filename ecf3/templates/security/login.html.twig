{% extends "base.html.twig" %}

{% block body %}
<div class="container-fluid">
    <h2>Se connecter</h2>
    <form action="{{ path('login')}}" method="POST">
        <div class="form-group">
            <label for="">Adresse mail</label>
            <input placeholder="Entrez votre adresse mail" required name="_username" type="text" class="form-control">
        </div>
        <div class="form-group">
            <label for="">Mot de passe</label>
            <input placeholder="Entrez votre mot de passe" required name="_password" type="password" class="form-control">
        </div>
        <br>
        <div class="form-group">
            <button type="submit" class="btn btn-success">Connexion</button>
        </div>
    </form>
    <br>
    <div class="form-group">
        <p>Vous n'avez pas encore de compte ? Créer-en un pour pouvoir réserver ! </p>
        <a class="btn btn-primary" href="{{ path('inscription') }}" role="button">S'inscrire</a>
    </div>
    <br>
</div>
{% endblock %}